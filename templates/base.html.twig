<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="css/styles.css">
        <link rel="stylesheet" href="css/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>


    <body>

        <nav class="navbar navbar-expand-lg">

            <div class="container-fluid navbar-music">

                <a class="navbar-brand" href="{{ path('app_home') }}">Musique.fr</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>

                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">

                            <a class="nav-link" aria-current="page" href="{{ path('app_music') }}">Musiques</a>

                        </li>

                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('app_add') }}">Ajouter une musique</a>

                        </li>

                        <li class="nav-item">

                            <a class="nav-link" aria-current="page" href="{{ path('app_artist') }}">Artistes</a>

                        </li>

                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('app_create_artist') }}">Ajouter un artiste</a>

                        </li>

                    </ul>

                </div>

            </div>

        </nav> 
{% block body %}{% endblock %}
    </body>

</html>
