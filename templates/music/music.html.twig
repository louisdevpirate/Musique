{% extends 'base.html.twig' %}


{% block body %}

    <h1 class="welcome">Liste des musiques</h1>

    <div class="container-fluid mx-auto">

        {% for musique in musiques %}

            {% if musique.user.id == app.user.getId() %}

                <div>
                    <h2>{{ musique.title }}</h2>
                    <ul>
                        <li> Genre : {{ musique.genre }}</li>
                        <li> Date de sortie : {{ musique.releaseDate }}</li>
                        <li> Par : {{ musique.artist.name }}</li>
                    </ul>
                </div>

            {% endif %}
            
        {% endfor %}

    </div>
{% endblock %}